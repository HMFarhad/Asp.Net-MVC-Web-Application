@model FKM_Diagnostic_Center.User

@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    
    <title>Login</title>
    <!-- The styles -->
    <link id="bs-css" href="~/Style/css/bootstrap-cerulean.css" rel="stylesheet">
    <style type="text/css">
        body {
            padding-bottom: 40px;
        }

        .sidebar-nav {
            padding: 9px 0;
        }
    </style>
    <link href="~/Style/css/bootstrap-responsive.css" rel="stylesheet" />
    <link href="~/Style/css/diagonistic-app.css" rel="stylesheet">
    <link href="~/Style/css/jquery-ui-1.8.21.custom.css" rel="stylesheet">

    <link rel="shortcut icon" href="~/Style/img/favicon.ico">

</head>
<body>
    <div class="container-fluid">
        <div class="row-fluid">

            <div class="row-fluid">
                <div class="span12 center login-header">
                    <h2>Welcome to Diagonistic Center</h2>
                </div><!--/span-->
            </div><!--/row-->

            <div class="row-fluid">
                <div class="well span5 center login-box">
                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-info">
                            @TempData["Message"].ToString()
                        </div>
                    }
                    <form class="form-horizontal" method="post">
                        <fieldset>
                            <div class="input-prepend" title="Username" data-rel="tooltip">
                                <span class="add-on"><i class="icon-user"></i></span><input autofocus class="input-large span10" name="username" id="username" type="text" placeholder="User Name" />
                            </div>
                            <div class="clearfix"></div>
                            <div class="input-prepend" title="Password" data-rel="tooltip">
                                <span class="add-on"><i class="icon-lock"></i></span><input class="input-large span10" name="password" id="password" type="password" placeholder="Password" />
                            </div>
                            <div class="clearfix"></div>
                            
                            <div class="clearfix"></div>
                            <p class="center span5">
                                @using (Html.BeginForm("Index", "User"))
                                {
                                    <input type="submit" value="Login" class="btn btn-primary" />
                                }
                            </p>
                        </fieldset>
                    </form>
                </div><!--/span-->
            </div><!--/row-->
        </div><!--/fluid-row-->

    </div><!--/.fluid-container-->
</body>
</html>
