@model FKM_Diagnostic_Center.Test

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Create New Test</h2>

@using (Html.BeginForm(null, null, FormMethod.Post, new { name = "myForm", id = "myForm" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend></legend>

        <div class="editor-label">
            <p>Test Name</p>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.testName)
            @Html.ValidationMessageFor(model => model.testName)
            <span id="msg1" style="color:red"> </span>
        </div>
        <div class="editor-label">
           <p>Cost Of Test</p>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.testBill)
            @Html.ValidationMessageFor(model => model.testBill)
            <span id="msg2" style="color:red"> </span>
        </div>

        <p>
            <input type="button" id="button1" value="Create" onclick="validateTest()" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

